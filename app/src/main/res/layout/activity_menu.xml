<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_menu"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.appstone.www.restaurantapp7.MenuActivity">
    <TextView
        android:text="MENU"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="40dp"
        android:id="@+id/textView"
        android:background="#e7b88a"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:id="@+id/textstarters"
        android:text="Starters"
        android:layout_below="@+id/imageView"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        app:srcCompat="@drawable/starters"
        android:layout_marginTop="15dp"
        android:id="@+id/imageView"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        app:srcCompat="@drawable/curry"
        android:id="@+id/imageView2"
        android:layout_marginTop="27dp"
        android:layout_below="@+id/textstarters"
        android:layout_alignParentStart="true"
        android:clickable="true" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:id="@+id/textmaincourse"
        android:text="Main course"
        android:layout_below="@+id/imageView2"
        android:layout_centerHorizontal="true"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        app:srcCompat="@drawable/desserts"
        android:id="@+id/imageView3"
        android:layout_below="@+id/textmaincourse"
        android:layout_centerHorizontal="true" />
<TextView
    android:layout_width="match_parent"
    android:layout_height="20dp"
    android:id="@+id/textdesserts"
    android:text="Desserts"
    android:layout_below="@+id/imageView3"
    android:layout_centerHorizontal="true"/>

</RelativeLayout>
